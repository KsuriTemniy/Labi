#include <iostream>
#include <time.h>
using namespace std;
int main()
{
    srand(time(NULL));
    cout << "vvedite razmer matrici" << endl;
    int n;
    cin >> n;
    int **arr = new int *[n];
    for (int i = 0; i < n; i++)
    {
        arr[i] = new int[n];
    }
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            arr[i][j] = rand() % (n*n)+10;
            //cin>>arr[i][j];
        }
    }
      int **brr = new int *[n];
    for (int i = 0; i < n; i++)
    {
        brr[i] = new int[n];
    }
   
    cout<<"*****************"<<endl;
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
    for(int ni=0;ni<n;ni++)
    {
    for(int nj=0;nj<n;nj++)
    { 
        
        
    //     int sum = 0;
    //     for (int i = 1; i <= pow(5,n); i=5*i)
    // {
    //     sum+=i;
    // }
    



    int min = arr[ni][nj];
    if (nj>ni)
    {
    for (int i = ni; i <= nj; i++)
    {
        for (int j = i; j <= nj; j++)
        {
         if (arr[i][j]<min)
         min = arr[i][j];
        }
    }
    }
    else
    {
    for (int i = ni; i >= nj; i--)
    {
        for (int j = i; j >= nj; j--)
        {
         if (arr[i][j]<min)
         min = arr[i][j];
        }
    }
    }
    brr[ni][nj] = min;
    }
    }
    cout<<endl<<"*****************"<<endl;
   
   
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            cout<<brr[i][j]<<" ";
        }
        cout<<endl;
    }
}
